            <field name="parent_id" ref="account_financial_report_cashflow"/>
            <field name="display_detail">detail_flat</field>
            <field name="type">accounts</field>
        </record>

        <record id="account_financial_report_cf_incom_cash" model="account.financial.report">
            <field name="name">Income Flows and Cash Flows</field>
            <field name="parent_id" ref="account_financial_report_cashflow"/>
